<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!--  Obat dan Suplemen  -->
            <TextView
                android:id="@+id/rEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Nama Obat dan Suplemen"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp" />

            <!--  Dosis  -->
            <TextView
                android:id="@+id/rPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Dosis"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp" />

            <!--  Frekuensi  -->
            <TextView
                android:id="@+id/rNama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Frekuensi"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <!--  Setiap  -->
            <TextView
                android:id="@+id/rPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Setiap"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addPassword"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp" />

            <!--  Cara Konsumsi  -->
            <TextView
                android:id="@+id/rCPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Cara Konsumsi"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.chip.Chip
                    android:id="@+id/sebelumMakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sebelum Makan"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/saatMakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="Saat Makan"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/sesudahMakan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="Sesudah Makan"/>
            </LinearLayout>

            <!--  Anjuran  -->
            <TextView
                android:id="@+id/anjuran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Anjuran/Instruksi"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/addInstruksi"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_shape"
                android:padding="10dp" />

            <!--  Pengingat  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/pengingat"
                    android:layout_width="325dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Pengingat"
                    android:textColor="@color/black"
                    android:textSize="12sp" />
                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <!--  Waktu Pengingat  -->
            <TextView
                android:id="@+id/waktuPengingat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Kamu akan diingatkan pukul"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.chip.Chip
                    android:id="@+id/waktuPengingat1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="08:00"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/waktuPengingat2"
                    android:layout_width="100dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="13:00"/>
                <com.google.android.material.chip.Chip
                    android:id="@+id/waktuPengingat3"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:text="20:00"/>
            </LinearLayout>


            <Button
                android:id="@+id/bsave_obat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/primaryColor"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>